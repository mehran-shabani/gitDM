{
  "name": "GitDM Codespaces",
  "dockerComposeFile": [
    "../docker-compose.yml",
    "docker-compose.codespaces.yml"
  ],
  "service": "web",
  "workspaceFolder": "/app",
  "forwardPorts": [8000, 5432, 6379, 9000, 9001],
  "portsAttributes": {
    "8000": { "label": "Django", "onAutoForward": "openPreview" },
    "5432": { "label": "Postgres" },
    "6379": { "label": "Redis" },
    "9000": { "label": "MinIO API" },
    "9001": { "label": "MinIO Console" }
  },
  "remoteEnv": {
    "DJANGO_DEBUG": "True",
    "DJANGO_ALLOWED_HOSTS": "localhost,127.0.0.1,.app.github.dev,.github.dev"
  },
  "postCreateCommand": "bash .devcontainer/post-create.sh"
}

